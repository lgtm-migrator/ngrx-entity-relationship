{
    "name": "ngrx-entity-relationship",
    "version": "0.6.0",
    "description": "Selector of related entities for @ngrx/entity",
    "files": [
        "dist"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "rm -Rf dist && tsc",
        "spread": "mkdir -p e2e/angular{5,6,7,8,9}/node_modules/ngrx-entity-relationship/dist && find e2e -type d -name 'angular*' -d 1 -exec rsync -a --delete ./dist/. {}/node_modules/ngrx-entity-relationship/dist/. \\; -exec cp ./package.json {}/node_modules/ngrx-entity-relationship/package.json \\;",
        "i:a6": "cd e2e/angular6 && npm install",
        "i:a7": "cd e2e/angular7 && npm install",
        "i:a8": "cd e2e/angular8 && npm install",
        "i:a9": "cd e2e/angular9 && npm install",
        "i:a": "npm run i:a6 && npm run i:a7 && npm run i:a8 && npm run i:a9",
        "b:a6": "cd e2e/angular6 && npm run build -- --prod && rm -Rf dist",
        "b:a7": "cd e2e/angular7 && npm run build -- --prod && rm -Rf dist",
        "b:a8": "cd e2e/angular8 && npm run build -- --prod && rm -Rf dist",
        "b:a9": "cd e2e/angular9 && npm run build -- --prod && rm -Rf dist",
        "b:a": "npm run b:a6 && npm run b:a7 && npm run b:a8 && npm run b:a9",
        "e2e:a6": "cd e2e/angular6 && npm run e2e",
        "e2e:a7": "cd e2e/angular7 && npm run e2e",
        "e2e:a8": "cd e2e/angular8 && npm run e2e",
        "e2e:a9": "cd e2e/angular9 && npm run e2e",
        "e2e:a": "npm run e2e:a6 && npm run e2e:a7 && npm run e2e:a8 && npm run e2e:a9",
        "e2e": "npm run i:a && npm run spread && npm run e2e:a && npm run b:a",
        "lint": "tslint --config ./tslint.yaml -p ./tsconfig.json",
        "release": "standard-version",
        "test": "karma start"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:satanTime/ngrx-entity-relationship.git"
    },
    "keywords": [
        "ngrx",
        "ngrx-entity",
        "entities",
        "relationship",
        "related",
        "angular"
    ],
    "author": "Michael Gusev <m@sudo.eu>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/satanTime/ngrx-entity-relationship/issues"
    },
    "homepage": "https://github.com/satanTime/ngrx-entity-relationship#readme",
    "peerDependencies": {
        "@ngrx/entity": ">=6.x <=9.x"
    },
    "devDependencies": {
        "@angular/core": "^9.1.0",
        "@ngrx/data": "^9.0.0",
        "@ngrx/entity": "^9.0.0",
        "@ngrx/store": "^9.0.0",
        "@types/jasmine": "^3.5.10",
        "@types/node": "^12.12.34",
        "husky": "^4.2.3",
        "jasmine": "^3.5.0",
        "jasmine-core": "^3.1.0",
        "karma": "^4.4.1",
        "karma-chrome-launcher": "^3.1.0",
        "karma-coverage": "^2.0.1",
        "karma-jasmine": "^3.1.1",
        "karma-junit-reporter": "^2.0.1",
        "karma-typescript": "^5.0.1",
        "lint-staged": "^10.1.1",
        "prettier": "^2.0.2",
        "rxjs": "^6.5.4",
        "standard-version": "^7.1.0",
        "tslint": "^6.1.0",
        "tslint-defocus": "^2.0.6",
        "tslint-lines-between-class-members": "^1.3.6",
        "tslint-microsoft-contrib": "^6.2.0",
        "typescript": ">=3.2.x <=3.7.x",
        "zone.js": "^0.10.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run lint",
            "post-commit": "git update-index --again"
        }
    },
    "standard-version": {
        "scripts": {
            "prerelease": "npm run lint && npm test && npm run build && npm run e2e"
        }
    }
}
