{
    "name": "ngrx-entity-relationship",
    "version": "0.5.0",
    "description": "Selector of related entities for @ngrx/entity",
    "files": [
        "dist"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "rm -Rf dist && tsc && mkdir -p e2e/angular{5,6,7,8,9}/node_modules/ngrx-entity-relationship && find e2e -type d -name 'angular*' -d 1 -exec rsync -av --delete ./dist/. {}/node_modules/ngrx-entity-relationship/. \\;",
        "lint": "tslint --config ./tslint.yaml -p ./tsconfig.json",
        "release": "standard-version",
        "test": "karma start"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:satanTime/ngrx-entity-relationship.git"
    },
    "keywords": [
        "ngrx",
        "ngrx-entity",
        "entities",
        "relationship",
        "related",
        "angular"
    ],
    "author": "Michael Gusev <m@sudo.eu>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/satanTime/ngrx-entity-relationship/issues"
    },
    "homepage": "https://github.com/satanTime/ngrx-entity-relationship#readme",
    "peerDependencies": {
        "@ngrx/entity": ">=8.x <=9.x"
    },
    "devDependencies": {
        "@angular/core": "^9.1.0",
        "@ngrx/data": "^9.0.0",
        "@ngrx/entity": "^9.0.0",
        "@ngrx/store": "^9.0.0",
        "@types/jasmine": "^3.5.10",
        "@types/node": "^12.12.34",
        "husky": "^4.2.3",
        "jasmine": "^3.5.0",
        "jasmine-core": "^3.1.0",
        "karma": "^4.4.1",
        "karma-chrome-launcher": "^3.1.0",
        "karma-coverage": "^2.0.1",
        "karma-jasmine": "^3.1.1",
        "karma-junit-reporter": "^2.0.1",
        "karma-typescript": "^5.0.1",
        "lint-staged": "^10.1.1",
        "prettier": "^2.0.2",
        "rxjs": "^6.5.4",
        "standard-version": "^7.1.0",
        "tslint": "^6.1.0",
        "tslint-defocus": "^2.0.6",
        "tslint-lines-between-class-members": "^1.3.6",
        "tslint-microsoft-contrib": "^6.2.0",
        "typescript": "~3.7.5",
        "zone.js": "^0.10.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run lint",
            "post-commit": "git update-index --again"
        }
    },
    "standard-version": {
        "scripts": {
            "prerelease": "npm run lint && npm test && npm run build"
        }
    }
}
